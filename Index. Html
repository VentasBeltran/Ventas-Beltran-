    // Largos: 8',10',12',14',16'
    const PRODUCTS = [
      // PINO
      { id:"pino_tablas", wood:"Pino", name:"Tablas de Pino", tag:"Tablas", sizes:"1x4 ¬∑ 1x6 ¬∑ 1x8 ¬∑ 1x10 ¬∑ 1x12", lengths:"8‚Ä≤ ¬∑ 10‚Ä≤ ¬∑ 12‚Ä≤", desc:"Construcci√≥n y carpinter√≠a general.", img:"https://images.unsplash.com/photo-1541971875076-8f970d573be6?auto=format&fit=crop&w=1200&q=70" },
      { id:"pino_vigas", wood:"Pino", name:"Vigas de Pino", tag:"Vigas", sizes:"2x2 ¬∑ 2x3 ¬∑ 2x4 ¬∑ 2x6 ¬∑ 2x8 ¬∑ 2x10 ¬∑ 2x12", lengths:"8‚Ä≤ ¬∑ 10‚Ä≤ ¬∑ 12‚Ä≤ ¬∑ 14‚Ä≤ ¬∑ 16‚Ä≤", desc:"Estructuras, marcos, refuerzo y obra.", img:"https://images.unsplash.com/photo-1581579188871-3b4b1d0b7e28?auto=format&fit=crop&w=1200&q=70" },
      { id:"pino_cuadradas", wood:"Pino", name:"Madera Cuadrada (Pino)", tag:"Cuadrada", sizes:"4x4 ¬∑ 4x6 ¬∑ 6x6", lengths:"8‚Ä≤ ¬∑ 10‚Ä≤ ¬∑ 12‚Ä≤", desc:"Soportes, columnas y estructura pesada.", img:"https://images.unsplash.com/photo-1452860606245-08befc0ff44b?auto=format&fit=crop&w=1200&q=70" },
      { id:"pino_listones", wood:"Pino", name:"Listones de Pino", tag:"Listones", sizes:"1x1 ¬∑ 1x2 ¬∑ 1x3 ¬∑ 1x4", lengths:"8‚Ä≤ ¬∑ 10‚Ä≤ ¬∑ 12‚Ä≤", desc:"Carpinter√≠a, marcos, refuerzos y detalles.", img:"https://images.unsplash.com/photo-1493934558415-9d19f0b2b4d2?auto=format&fit=crop&w=1200&q=70" },

      // CEDRO
      { id:"cedro_tablas", wood:"Cedro", name:"Tablas de Cedro", tag:"Acabado", sizes:"1x4 ¬∑ 1x6 ¬∑ 1x8 ¬∑ 1x10 ¬∑ 1x12", lengths:"8‚Ä≤ ¬∑ 10‚Ä≤ ¬∑ 12‚Ä≤", desc:"Muebles, puertas, acabado y carpinter√≠a fina.", img:"https://images.unsplash.com/photo-1519710164239-da123dc03ef4?auto=format&fit=crop&w=1200&q=70" },
      { id:"cedro_listones", wood:"Cedro", name:"Listones de Cedro", tag:"Premium", sizes:"1x1 ¬∑ 1x2 ¬∑ 1x3 ¬∑ 1x4", lengths:"8‚Ä≤ ¬∑ 10‚Ä≤ ¬∑ 12‚Ä≤", desc:"Detalles finos, marcos y refuerzo para muebles.", img:"https://images.unsplash.com/photo-1565799557185-7d2c0b9d2f50?auto=format&fit=crop&w=1200&q=70" },

      // TECA
      { id:"teca_tablas", wood:"Teca", name:"Tablas de Teca", tag:"Exterior", sizes:"1x4 ¬∑ 1x6 ¬∑ 1x8", lengths:"8‚Ä≤ ¬∑ 10‚Ä≤ ¬∑ 12‚Ä≤", desc:"Exterior y muebles resistentes (sellado recomendado).", img:"https://images.unsplash.com/photo-1523419409543-a5e549c1faa0?auto=format&fit=crop&w=1200&q=70" },

      // POSTES
      { id:"postes", wood:"Postes", name:"Postes / Palos", tag:"Postes", sizes:"3‚Ä≥ ¬∑ 4‚Ä≥ ¬∑ 5‚Ä≥ ¬∑ 6‚Ä≥", lengths:"seg√∫n disponibilidad", desc:"Cercas, soportes y estructuras.", img:"https://images.unsplash.com/photo-1558459654-c430be7e9217?auto=format&fit=crop&w=1200&q=70" },

      // SERVICIO
      { id:"corte", wood:"Pino", name:"Servicio de Corte a Medida", tag:"Corte", sizes:"Corte recto", lengths:"seg√∫n lista", desc:"Cortes a medida seg√∫n tu lista o croquis.", img:"https://images.unsplash.com/photo-1519710887722-0d3c2d3b0f9a?auto=format&fit=crop&w=1200&q=70" },
    ];

    // ===== State =====
    const state = { search:"", wood:"all" };
    const qs = (s) => document.querySelector(s);

    function openWA(message){
      const url = `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(message)}`;
      window.open(url, "_blank");
    }

    function buildProductMessage(p){
      return `Hola Ventas Beltr√°n,
Quiero cotizar: ${p.name}
Madera: ${p.wood}
Medidas disponibles: ${p.sizes}
Largo: ${p.lengths}

Por favor ind√≠came:
- Medida exacta:
- Largo:
- Cantidad:
- ¬øNecesita corte? (medidas):
- ¬øEntrega o retiro?
- Cotizaci√≥n por pieza o pie tablar:`;
    }

    function renderProducts(){
      const container = qs("#products");
      container.innerHTML = "";

      let list = PRODUCTS.slice();

      const s = state.search.trim().toLowerCase();
      if (s){
        list = list.filter(p =>
          (p.name + " " + p.wood + " " + p.tag + " " + p.sizes + " " + p.lengths + " " + p.desc).toLowerCase().includes(s)
        );
      }
      if (state.wood !== "all"){
        list = list.filter(p => p.wood === state.wood);
      }

      for (const p of list){
        const card = document.createElement("div");
        card.className = "card product";

        card.innerHTML = `
          <div class="thumb">
            <img alt="${p.name}" src="${p.img}">
            <div class="label">ü™µ ${p.wood}</div>
          </div>
          <div class="pTop">
            <h3>${p.name}</h3>
            <span class="tag">${p.tag}</span>
          </div>
          <p class="desc"><b>Medidas:</b> ${p.sizes}<br><b>Largos:</b> ${p.lengths}<br>${p.desc}</p>
          <div class="rowBtns">
            <button class="btnSoft btnGreen" data-id="${p.id}">Cotizar por WhatsApp</button>
            <button class="btnSoft" data-info="${p.id}">Ver medidas</button>
          </div>
        `;
        container.appendChild(card);
      }

      // Handlers
      container.querySelectorAll('button[data-id]').forEach(btn=>{
        btn.addEventListener("click", ()=>{
          const p = PRODUCTS.find(x => x.id === btn.dataset.id);
          openWA(buildProductMessage(p));
        });
      });

      container.querySelectorAll('button[data-info]').forEach(btn=>{
        btn.addEventListener("click", ()=>{
          const p = PRODUCTS.find(x => x.id === btn.dataset.info);
          alert(`${p.name}\n\nMadera: ${p.wood}\nMedidas: ${p.sizes}\nLargos: ${p.lengths}\n\nüìå Para cotizar: dime medida exacta + largo + cantidad + corte + entrega/retiro.`);
        });
      });

      if (!container.children.length){
        const empty = document.createElement("div");
        empty.className = "card";
        empty.style.padding = "16px";
        empty.innerHTML = `<b>No encontramos resultados</b><p class="desc">Prueba con otra palabra (ej: 2x4, 1x6, poste, cedro).</p>`;
        container.appendChild(empty);
      }
    }

    // ===== UI events =====
    qs("#search").addEventListener("input", (e)=>{ state.search = e.target.value; renderProducts(); });
    qs("#wood").addEventListener("change", (e)=>{ state.wood = e.target.value; renderProducts(); });

    qs("#btnWAHeader").addEventListener("click", ()=>{
      openWA("Hola Ventas Beltr√°n, quiero cotizar madera s√≥lida. ¬øQu√© tienen disponible hoy?");
    });

    qs("#btnWAFloat").addEventListener("click", (e)=>{
      e.preventDefault();
      openWA("Hola Ventas Beltr√°n, quiero cotizar madera s√≥lida. Medida, largo y cantidad. ¬øMe ayudan?");
    });

    // Google Maps (bot√≥n + iframe)
    function openMaps(){
      const url = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(MAPS_QUERY)}`;
      window.open(url, "_blank");
    }
    qs("#btnMaps").addEventListener("click", openMaps);
    qs("#btnMapsHero").addEventListener("click", openMaps);

    // Iframe map (usa embed por query)
    const embedUrl = `https://www.google.com/maps?q=${encodeURIComponent(MAPS_QUERY)}&output=embed`;
    qs("#mapFrame").src = embedUrl;

    qs("#btnWAFromLocation").addEventListener("click", ()=>{
      openWA(`Hola Ventas Beltr√°n, voy para el local en La Chorrera (Calle Buena Vista, diagonal al Mercado de Abasto). ¬øEst√°n abiertos?`);
    });

    // Quote form -> WhatsApp + copy
    function buildQuoteMessage(data){
      return `Hola Ventas Beltr√°n,
Quiero una cotizaci√≥n de madera s√≥lida.

Datos:
- Nombre: ${data.get("nombre")}
- Tel/WhatsApp: ${data.get("telefono")}
- Cotizar: ${data.get("unidad")}
- Entrega: ${data.get("entrega")}

Pedido:
- Madera: ${data.get("madera")}
- Medida: ${data.get("medida")}
- Largo: ${data.get("largo")}
- Cantidad: ${data.get("cantidad")}
- Corte: ${data.get("corte")}

Detalles:
${data.get("detalle") || "N/A"}

Ubicaci√≥n del local: Calle Buena Vista, diagonal al Mercado de Abasto, La Chorrera.`;
    }

    qs("#quoteForm").addEventListener("submit", (e)=>{
      e.preventDefault();
      const data = new FormData(e.target);
      openWA(buildQuoteMessage(data));
    });

    qs("#btnCopy").addEventListener("click", async ()=>{
      const form = qs("#quoteForm");
      const data = new FormData(form);
      const msg = buildQuoteMessage(data);
      try{
        await navigator.clipboard.writeText(msg);
        alert("Mensaje copiado ‚úÖ");
      }catch{
        alert("No pude copiar. Selecciona y copia manualmente.");
      }
    });

    // Init
    qs("#year").textContent = new Date().getFullYear();
    renderProducts();
  </script>

